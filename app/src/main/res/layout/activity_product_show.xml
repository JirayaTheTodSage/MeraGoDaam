<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ProductShow">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="visit the store"
                    android:textColor="#1976D2" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/star_icon_holo_1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star_icon_holo" />

                        <ImageView
                            android:id="@+id/star_icon_holo_2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star_icon_holo" />

                        <ImageView
                            android:id="@+id/star_icon_holo_3"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star_icon_holo" />

                        <ImageView
                            android:id="@+id/star_icon_holo_4"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star_icon_holo" />

                        <ImageView
                            android:id="@+id/star_icon_holo_5"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star_icon_holo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:hint="5889554" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/star_icon_1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/star_icon_2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/star_icon_3"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/star_icon_4"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/star_icon_5"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star_icon" />

                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/pro_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
              android:layout_margin="5dp"
                android:id="@+id/pro_img"
                android:layout_width="match_parent"
                android:layout_height="500dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹"
                    android:textColor="#590B0B"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/pro_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="20000"

                    android:textColor="#590B0B"
                    android:textSize="24sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/pro_description"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>